

<div class="container"><br>
    <br><div class="card border-dark col align-self-center text-center">
          <div class="card-header  text-dark">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>
                <!--<div class="col-lg-5"> -->
                    <div class="login-wrap p-4 p-md-5">
                        <h3 class="text-center mb-4">Change your password</h3>
                        <form action="#" class="login-form">
                            <div class="form-group">
                              <div class="input-group">
                                  <span class="input-group-text" id="addon-wrapping"><strong>Password:</strong></span>
                                  <b><%=f.password_field :password, autofocus: true, class: "form-control rounded-left", placeholder:"Minimum 6 Characters", aria_label:"Username", aria_describedby: "addon-wrapping", autocomplete: "new-password" %></b>
                              </div><br>
                            </div>

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-text" id="addon-wrapping"><%= f.label :password_confirmation, "Confirm new password", class: 'fw-bolder'%></span>
                                    <b><%= f.password_field :password_confirmation, class: "form-control rounded-left", placeholder:"Retype Password", aria_label:"password", aria_describedby: "addon-wrapping",autofocus: true %></b>
                                </div><br>
                            </div>
                            <div class="form-group actions"><br>
                                <b><%=f.submit "Change my password", class: "form-control btn btn-primary rounded submit px-3" %></b>
                            </div>
                        </form>
                    </div>
                <!--</div> -->
            <% end %>
            <div class="d-grid gap-2 col-4 mx-auto">
               <%= render "devise/shared/links" %><br>
            </div>
          </div><br>
    </div>
</div>