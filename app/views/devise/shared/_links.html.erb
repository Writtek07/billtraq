<%- if controller_name != 'sessions' %><p><em>If you already have a account, click <u>Log In</u> button on top of page</em></p>
  <br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p><em>If you are a new user, click <u>Sign Up</u> button on top of the page to create your new account.</em></p>
  <!--<% link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-dark" %><br /> -->
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password? Click here!", new_password_path(resource_name), class: "btn btn-outline-secondary" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p><em>If you already have Signed up, but account is not confirmed yet! Please click below</em></p>
  <%= link_to "Resend confirmation instructions", new_confirmation_path(resource_name), class: "btn btn-outline-secondary"%><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-outline-secondary" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
