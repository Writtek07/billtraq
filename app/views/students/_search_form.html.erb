<!--<strong>Search Students with:</strong> -->
<%= search_form_for @q, class: 'form-group', id: 'stu-search-group' do |f| %>
  
	  <%= f.search_field :first_name_or_last_name_cont, placeholder: 'Name', class: 'form-control rounded text-center' %>
	  
	  <%= f.search_field :grade_eq, placeholder: 'Class', class: 'form-control rounded text-center' %>

	  <%= f.search_field :admission_no_eq, placeholder: 'Admission No', class: 'form-control rounded text-center' %>

	  	<div class="btn-group">
	    		<%= f.submit 'Search!', class: 'btn btn-sm btn-outline-success rounded mx-2' %>
	    		<%= link_to 'Reset', students_path, class: 'btn btn-sm btn-outline-dark rounded' %>
	    </div>
	
	
<% end %>