<div class="container-fluid">
	<table class="table table-hover table-striped table-bordered" cellspacing="0" width="100%">
		<thead>
		  <tr>
		    <th>First name</th>
		    <th>Last name</th>
		    <th>Date of Birth</th>
		    <th>Date of Admission</th>
		    <th>Admission no</th>
		    <th>Phone number</th>
		    <th>Class</th>
		    <th>Section</th>
		    <th>Father name</th>
		    <th>Mother name</th>
		    <th colspan="1"></th>
		  </tr>
		</thead>

		<tbody>
		  <% @students.each do |student| %>
		    <tr>
		      <td><%= student.first_name %></td>
		      <td><%= student.last_name %></td>
		      <td><%= student.dob.strftime("%d-%m-%Y") %></td>
		      <td><%= student.date_of_admission.strftime("%d-%m-%Y") %></td>
		      <td><%= student.admission_no %></td>
		      <td><%= student.phone_number %></td>
		      <td><%= student.grade %></td>
		      <td><%= student.section %></td>
		      <td><%= student.father_name %></td>
		      <td><%= student.mother_name %></td>
		      <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-secondary btn-round btn-sm' %></td>
		    </tr>
		  <% end %>
		</tbody>

	</table>
	
</div>